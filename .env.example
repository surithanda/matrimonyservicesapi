# Database Configuration
DB_HOST=your_db_host
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
PORT=your_port
FIXED_SALT=your_fixed_salt

# Email Configuration
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password

# JWT Configuration
JWT_SECRET=your_jwt_secret
API_KEY=
STRIPE_SECRET_KEY=your_secret_key

## Storage Provider
# google | onedrive
STORAGE_PROVIDER=onedrive

# Google Drive configuration
G_DRIVE_FOLDER_ID=your_folder_id
G_DRIVE_SCOPE=your_drive_scope
G_DRIVE_SERVICE_AC=your_service_ac_json
G_DRIVE_IMAGE_URI=drive_file_uri

# OneDrive / Microsoft Graph configuration
# Choose mode: user (OneDrive for Business user) or site (SharePoint document library)
ONEDRIVE_MODE=user
# If user mode, provide the user's UPN (email) or object ID
ONEDRIVE_USER_ID=
# If site mode, provide site and drive ids
# ONEDRIVE_SITE_ID=your_site_id
# ONEDRIVE_DRIVE_ID=your_drive_id

# Azure AD app credentials (for Graph client credentials flow)
MS_TENANT_ID=
MS_CLIENT_ID=
MS_CLIENT_SECRET=


